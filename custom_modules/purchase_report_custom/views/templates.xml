<odoo>
    <data>
        <template id="report_purchaseorder_document_custom" inherit_id="purchase.report_purchaseorder_document">
            
			<xpath expr="//div[@class='page']" position="replace">
				<div class="page">
					<div class="oe_structure"/>

					<h2 t-if="o.partner_id.lang == 'en_US' and o.state == 'draft'">Request for Quotation #<span t-field="o.name"/></h2>
                    <h2 t-if="o.partner_id.lang == 'es_ES' and o.state == 'draft'">Solicitud de presupuesto #<span t-field="o.name"/></h2>
					<h2 t-if="o.partner_id.lang == 'en_US' and o.state in ['sent', 'to approve']">Purchase Order #<span t-field="o.name"/></h2>
                    <h2 t-if="o.partner_id.lang == 'es_ES' and o.state in ['sent', 'to approve']">Pedido compra #<span t-field="o.name"/></h2>
					<h2 t-if="o.partner_id.lang == 'en_US' and o.state in ['purchase', 'done']">Purchase Order #<span t-field="o.name"/></h2>
                    <h2 t-if="o.partner_id.lang == 'es_ES' and o.state in ['purchase', 'done']">Pedido compra #<span t-field="o.name"/></h2>
					<h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #<span t-field="o.name"/></h2>

					<div id="informations" class="row mt32 mb32">
						<div t-if="o.user_id" class="col-3 bm-2">
							<strong t-if="o.partner_id.lang == 'en_US'">Purchase Representative:</strong>
                            <strong t-if="o.partner_id.lang == 'es_ES'">Contacto:</strong>
							<p t-field="o.user_id" class="m-0"/>
						</div>
						<div t-if="o.partner_ref" class="col-3 bm-2">
							<strong t-if="o.partner_id.lang == 'en_US'">Your Order Reference:</strong>
                            <strong t-if="o.partner_id.lang == 'es_ES'">Referencia pedido:</strong>
							<p t-field="o.partner_ref" class="m-0"/>
						</div>
						<div t-if="o.date_order" class="col-3 bm-2">
							<strong t-if="o.partner_id.lang == 'en_US'">Order Date:</strong>
                            <strong t-if="o.partner_id.lang == 'es_ES'">Fecha pedido:</strong>
							<p t-field="o.date_order" class="m-0"/>
						</div>
					</div>

					<table class="table table-sm o_main_table">
						<thead>
							<tr>
								<th t-if="o.partner_id.lang == 'en_US'" name="th_description"><strong>Description</strong></th>
                                <th t-if="o.partner_id.lang == 'es_ES'" name="th_description"><strong>Descripcion</strong></th>
								<th t-if="o.partner_id.lang == 'en_US'" name="th_quantity" class="text-right"><strong>Qty.</strong></th>
                                <th t-if="o.partner_id.lang == 'es_ES'" name="th_quantity" class="text-right"><strong>Cant.</strong></th>
								<th t-if="o.partner_id.lang == 'en_US'" name="th_price_unit" class="text-right"><strong>Unit Price</strong></th>
                                <th t-if="o.partner_id.lang == 'es_ES'" name="th_price_unit" class="text-right"><strong>Precio</strong></th>
								<th name="th_amount" class="text-right"><strong>Total</strong></th>
							</tr>
						</thead>
						<tbody>
							<t t-set="current_subtotal" t-value="0"/>
							<t t-foreach="o.order_line" t-as="line">
								<t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
								<t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

								<tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
									<t t-if="not line.display_type">
										<td id="product">
											<span t-field="line.name"/>
										</td>
										<td class="text-right">
											<span t-field="line.product_qty"/>
											<span t-field="line.product_uom.name" groups="uom.group_uom"/>
										</td>
										<td class="text-right">
											<span t-field="line.price_unit"/>
										</td>
										<td class="text-right">
											<span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
										</td>
									</t>
									<t t-if="line.display_type == 'line_section'">
										<td colspan="99" id="section">
											<span t-field="line.name"/>
										</td>
										<t t-set="current_section" t-value="line"/>
										<t t-set="current_subtotal" t-value="0"/>
									</t>
									<t t-if="line.display_type == 'line_note'">
										<td colspan="99" id="note">
											<span t-field="line.name"/>
										</td>
									</t>
								</tr>
								<t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
									<tr class="is-subtotal text-right">
										<td colspan="99" id="subtotal">
											<strong class="mr16">Subtotal</strong>
											<span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
										</td>
									</tr>
								</t>
							</t>
						</tbody>
					</table>

					<div id="total" class="row justify-content-end">
						<div class="col-4">
							<table class="table table-sm">
								<tr class="border-black">
									<td name="td_subtotal_label"><strong>Subtotal</strong></td>
									<td class="text-right">
										<span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
									</td>
								</tr>
								<tr>
									<td name="td_taxes_label">Imp/tax</td>
									<td class="text-right">
										<span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
									</td>
								</tr>
								<tr class="border-black o_total">
									<td name="td_amount_total_label"><strong>Total</strong></td>
									<td class="text-right">
										<span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
									</td>
								</tr>
							</table>
						</div>
					</div>

					<p t-field="o.notes"/>
					<div class="oe_structure"/>
				</div>
			</xpath>
			
        </template>
    </data>
</odoo>